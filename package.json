{
  "name": "generator-repo",
  "description": "Yo Repo! A Yeoman generator for awesome Git repo management.",
  "version": "1.0.0",
  "author": "@seantrane",
  "license": "MIT",
  "homepage": "https://github.com/seantrane/yo-repo",
  "repository": "github:seantrane/yo-repo",
  "bugs": "https://github.com/seantrane/yo-repo/issues",
  "files": [
    "generators"
  ],
  "keywords": [
    "yeoman-generator"
  ],
  "scripts": {
    "build:e2e": "npm run build && npm run e2e",
    "build:test:e2e": "npm run build && npm test && npm run e2e",
    "build:test": "npm run build && npm test",
    "build": "tsc && npm run sync:templates",
    "ci": "npm run lint && npm run build:test:e2e",
    "clean:dist": "shx rm -rf generators",
    "clean:temp": "shx rm -rf temp",
    "clean": "shx rm -rf generators temp",
    "commitmsg": "commitlint -E GIT_PARAMS",
    "coverage": "istanbul cover node_modules/mocha/bin/_mocha -- --opts mocha.opts",
    "docs": "typedoc --options typedoc.json --exclude '**/*.spec.ts' ./src/",
    "e2e": "shx rm -rf temp && shx mkdir temp && (cd temp && yo repo) || exit 1",
    "git:commit": "git-cz",
    "lint:md": "npm run markdownlint -- -i 'node_modules/' -c '.markdownlint.yaml' './'",
    "lint:ts": "tslint \"src/**/*.ts\"",
    "lint": "npm run lint:md && npm run lint:ts",
    "markdownlint": "markdownlint",
    "semantic-release": "semantic-release",
    "sync:templates:default": "sync-files src/default/templates generators/default/templates",
    "sync:templates": "npm run sync:templates:default",
    "test": "nyc mocha --opts mocha.opts"
  },
  "dependencies": {
    "@octokit/rest": "^15.10.0",
    "chalk": "^2.4.1",
    "clear": "^0.1.0",
    "clui": "^0.3.6",
    "configstore": "^4.0.0",
    "date-fns": "^1.29.0",
    "figlet": "^1.2.0",
    "generator-editorconf": "^0.2.0",
    "generator-license": "^5.4.0",
    "shelljs": "^0.8.2",
    "yeoman-generator": "^3.1.1",
    "yo-option-or-prompt": "^0.1.2",
    "yosay": "^2.0.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.0.0",
    "@commitlint/config-conventional": "^7.0.1",
    "@commitlint/travis-cli": "^7.0.0",
    "@semantic-release/changelog": "^3.0.0",
    "@semantic-release/git": "^7.0.1",
    "@types/chai": "^4.1.4",
    "@types/configstore": "^2.1.1",
    "@types/figlet": "^1.2.0",
    "@types/lodash": "^4.14.116",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.5.7",
    "@types/shelljs": "^0.8.0",
    "@types/sinon": "^5.0.1",
    "@types/sinon-chai": "^3.2.0",
    "@types/yeoman-generator": "^2.0.3",
    "@types/yeoman-test": "^1.7.4",
    "@types/yosay": "0.0.29",
    "chai": "^4.1.2",
    "commitizen": "^2.10.1",
    "cz-conventional-changelog": "^2.1.0",
    "husky": "^0.14.3",
    "istanbul": "^0.4.5",
    "markdownlint-cli": "^0.13.0",
    "marked": "^0.4.0",
    "mocha": "^5.2.0",
    "nyc": "^12.0.2",
    "semantic-release": "^15.9.5",
    "shx": "^0.3.2",
    "sinon": "^6.1.5",
    "sinon-chai": "^3.2.0",
    "source-map-support": "^0.5.8",
    "sync-files": "^1.0.3",
    "ts-node": "~7.0.0",
    "tslint": "~5.11.0",
    "typedoc": "^0.12.0",
    "typescript": "~2.9.2",
    "yeoman-assert": "^3.1.1",
    "yeoman-test": "^1.9.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release": {
    "verifyConditions": [
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git",
      "@semantic-release/github"
    ],
    "prepare": [
      {
        "path": "@semantic-release/changelog",
        "changelogTitle": "# CHANGELOG"
      },
      "@semantic-release/npm",
      "@semantic-release/git"
    ],
    "publish": [
      "@semantic-release/npm",
      "@semantic-release/github"
    ],
    "success": [
      "@semantic-release/github"
    ],
    "fail": [
      "@semantic-release/github"
    ]
  },
  "nyc": {
    "check-coverage": true,
    "per-file": false,
    "branches": 80,
    "functions": 80,
    "lines": 80,
    "statements": 80,
    "watermarks": {
      "branches": [
        80,
        95
      ],
      "functions": [
        80,
        95
      ],
      "lines": [
        80,
        95
      ],
      "statements": [
        80,
        95
      ]
    },
    "extension": [
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "**/*.d.ts",
      "**/*.spec.ts",
      "coverage",
      "generators"
    ],
    "include": [
      "src/**/*.ts"
    ],
    "reporter": [
      "html",
      "lcov",
      "text"
    ],
    "all": true
  }
}
